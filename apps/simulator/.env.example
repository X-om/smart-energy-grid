# Telemetry Simulator Configuration

# Number of virtual smart meters to simulate
METERS=5000

# Interval between readings (seconds)
INTERVAL=10

# Simulation mode: normal | peak | outage
MODE=normal

# Target destination: http | kafka
TARGET=http

# HTTP Ingestion Service Configuration
INGESTION_URL=http://localhost:3001/telemetry/batch

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=raw_readings
KAFKA_CLIENT_ID=segs-simulator

# Regional Configuration (comma-separated)
# Valid regions: Mumbai-North, Mumbai-South, Delhi-North, Delhi-South, Bangalore-East, Bangalore-West, Pune-East, Pune-West, Hyderabad-Central, Chennai-North
REGIONS=Mumbai-North,Delhi-North,Bangalore-East,Pune-West

# Duplicate rate (0.01 = 1% of readings will be duplicates)
DUPLICATE_RATE=0.01

# Batch size for HTTP requests
BATCH_SIZE=500

# Maximum concurrent requests
CONCURRENCY_LIMIT=10

# Number of iterations (0 = infinite)
ITERATIONS=0

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Metrics server configuration (Prometheus)
METRICS_ENABLED=false
METRICS_PORT=7000

# Retry configuration
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Simulation parameters
MIN_VOLTAGE=220
MAX_VOLTAGE=240
BASE_LOAD_MIN_KW=1.0
BASE_LOAD_MAX_KW=8.0
