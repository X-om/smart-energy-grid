# Service Configuration
PORT=3002
NODE_ENV=production
LOG_LEVEL=info

# Kafka Configuration
KAFKA_BROKERS=localhost:29092
KAFKA_CLIENT_ID=stream-processor
KAFKA_GROUP_ID=stream-processor-group
KAFKA_TOPIC_INPUT=raw_readings
KAFKA_TOPIC_AGG_1M=aggregates_1m
KAFKA_TOPIC_AGG_15M=aggregates_15m
KAFKA_TOPIC_ALERTS=alerts

# PostgreSQL/TimescaleDB Configuration
POSTGRES_URL=postgres://postgres:password@localhost:5432/segs

# Processing Configuration
FLUSH_INTERVAL_1M=60000       # 60 seconds (1 minute)
FLUSH_INTERVAL_15M=900000     # 900 seconds (15 minutes)
